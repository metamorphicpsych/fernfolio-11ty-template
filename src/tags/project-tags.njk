---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /project-tags/{{ tag }}/
layout: base.njk
renderData:
  title: "Projects tagged “{{ tag }}”"
  metaDescription: "All projects tagged with “{{ tag }}”"
---
<div class="page-container">
  {# Header #}
  <div class="tag-list tag-list--no-wrap">
    <h4 class="tag-list__title">Projects Tagged: "{{ tag | capitalize }}"</h4>
    <a class="btn btn--sm btn--danger" href="/patients">Remove Tag</a>
  </div>

  {# Projects #}
  {% from "macros/projectlist.njk" import projectlist %}
  {{ projectlist(projects = collections[tag] | reverse) }}

  {# Footer #}
  <nav>
    <a href="{{ '/patients/' | url }}">← View All Patients</a>
  </nav>
</div>
